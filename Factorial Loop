#include <stdio.h>

int main()

{
    
    int n, i;
    int r = 1;
    
	printf("Enter a non-negative whole number:\n");
	scanf("%d", &n);
	
	if (n<0)
	{
	    printf("Bad Input! %d is negative...", n);
	    return 0;
	}
	
	else if (n==0)
	{
	    printf("0! is 1");
	    return 0;
	}
	
	for (i=n; i>=1; i--)
	{
	    r *= i;
	}
	
	printf("%d! is %d", n, r);
	
	return 0;

}
